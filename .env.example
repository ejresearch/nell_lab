# HARV SHIPPED - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# OpenAI Configuration (REQUIRED)
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# Alternative AI Providers (OPTIONAL)
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_key_here
GOOGLE_API_KEY=your_google_key_here
XAI_API_KEY=your_xai_key_here

# ============================================================================
# Application Configuration
# ============================================================================
ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=sqlite:///./backend/data/harv.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/harv_shipped

# ============================================================================
# Authentication & Security
# ============================================================================
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS Configuration
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Curriculum Generation Configuration
# ============================================================================
CURRICULUM_OUTPUT_DIR=./backend/data/curriculum
TOTAL_WEEKS=35
DAYS_PER_WEEK=4
MAX_RETRIES=10

# ============================================================================
# Content Analyzer Configuration
# ============================================================================
ANALYSIS_OUTPUT_DIR=./backend/data/analyzed_content
MAX_FILE_SIZE_MB=100
SUPPORTED_FORMATS=txt,docx,pdf

# ============================================================================
# AI Tutor Configuration
# ============================================================================
DEFAULT_AI_PROVIDER=openai
DEFAULT_MODEL=gpt-4o
MEMORY_LAYERS=4
MAX_CONVERSATION_HISTORY=10

# ============================================================================
# Pipeline Configuration
# ============================================================================
ENABLE_AUTO_VALIDATION=true
ENABLE_AUTO_IMPORT=true
QUALITY_THRESHOLD=8.0
AUTO_REFINE_ON_LOW_QUALITY=true

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_FORMAT=json

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_ANALYTICS=true
ENABLE_PATTERN_EXTRACTION=true
ENABLE_FEEDBACK_LOOP=true
ENABLE_MULTI_SUBJECT=false

# ============================================================================
# Budget & Cost Controls
# ============================================================================
ENABLE_BUDGET_TRACKING=true
MONTHLY_BUDGET_USD=100.00
COST_ALERT_THRESHOLD=0.80
